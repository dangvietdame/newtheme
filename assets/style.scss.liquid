*{
    box-sizing: border-box;
    line-height: 1;
}
body {
    background-color: var(--bg-color-1);
    margin: 0;
}
a{
    text-decoration: none;
    color: #252525;
    &:hover{
        text-decoration: none;
    }
}
ul{
    list-style-type: none;
    padding: 0;
    margin: 0;
}
svg{
    width: auto;
}
.container{
    max-width: 1200px;
    margin: auto;
}
input{
    font-family: var(--primary-font-family);
    font-style: var(--primary-font-style);
    font-weight: var(--primary-font-weight);
}