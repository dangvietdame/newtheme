        },
        {
            "type": "header",
            "content": "Function Bar - Sign In"
        },
        {
            "type": "text",
            "id": "signin_title",
            "label": "Sign in title",
            "default": "Sign In"
        },
        {
            "type": "text",
            "id": "signin_sub_title",
            "label": "Sign in sub title",
            "default": "Account"
        },
        {
            "type": "header",
            "content": "Function Bar - Cart"
        },
        {
            "type": "text",
            "id": "cart_title",
            "label": "Cart title",
            "default": "Total"
        },
        {
            "type": "header",
            "content": "Category"
        },
        {
            "type": "text",
            "id": "cat_header",
            "label": "Category header",
            "default": "Browse Categories"
        },
        {
            "type": "header",
            "content": "Menu"
        },
        {
            "type": "link_list",
            "id": "menu",
            "label": "Select Main menu to display",
            "default": "main-menu"
        },
        {
            "type": "header",
            "content": "Mega menu"
        },
        {
            "type": "link_list",
            "id": "mega_menu",
            "label": "Select Mega menu to display"
        },
        {
            "type": "number",
            "id": "megamenu_pos",
            "label": "Position-Order(Exp: 1,2,3..)",
            "default": 2
        },
        {
            "type": "header",
            "content": "Color"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#ffffff"
        },
        {
            "type": "color",
            "id": "menu_item_color",
            "label": "Menu Item Color",
            "default": "#041E42"
        },
        {
            "type": "color",
            "id": "menu_background_color",
            "label": "Menu Background Color",
            "default": "#ffffff"
        },
        {
            "type": "color",
            "id": "background_color",
            "label": "Background Color",
            "default": "#443297"
        },
        {
            "type": "color",
            "id": "second_color",
            "label": "Second Background Color",
            "default": "#F5C34B"
        }
    ],
    "max_blocks": 2,
    "blocks":[
        {
            "type": "megamenu_product",
            "name": "Product in Mega menu",
            "settings":[
                {
                    "type": "product",
                    "id": "product",
                    "label": "Product"
                },
                {
                    "type": "checkbox",
                    "id": "min_price",
                    "label": "Show Min price?",
                    "default": true
                },
                {
                    "type": "text",
                    "id": "min_price_text",
                    "label": "Display text before Min price",
                    "default": "Starting from"
                },
                {
                    "type": "text",
                    "id": "link_text",
                    "label": "Link Text",
                    "default": "Shop Now"
                }
            ]
        }
    ]
}
{% endschema %}